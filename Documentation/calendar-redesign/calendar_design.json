{
  "colors": {
    "primary": "#ff6b35",
    "background": "#1a1a1a", 
    "surface": "#2d2d2d",
    "text_primary": "#ffffff",
    "text_secondary": "#a0a0a0",
    "border": "#404040",
    "success": "#4ecdc4",
    "habit_color": "#ff6b6b",
    "task_color": "#4ecdc4", 
    "timeblock_color": "#a8e6cf"
  },

  "spacing": {
    "xs": "4px",
    "sm": "8px", 
    "md": "16px",
    "lg": "24px",
    "xl": "32px"
  },

  "typography": {
    "header": "24px font-weight-600",
    "event_title": "14px font-weight-500",
    "time_label": "12px font-weight-400",
    "day_label": "16px font-weight-500"
  },

  "layout": {
    "time_column_width": "60px",
    "event_min_height": "40px",
    "hour_height": "60px",
    "day_header_height": "80px"
  },

  "interactions": {
    "hover": "opacity: 0.8",
    "active": "scale: 0.98",
    "completed": "opacity: 0.6 + checkmark overlay",
    "drag": "shadow + slight rotation"
  },

  "mobile": {
    "breakpoint": "768px",
    "touch_target": "44px minimum",
    "swipe_enabled": true,
    "compact_spacing": true
  },

  "animations": {
    "view_transition": "300ms ease",
    "event_hover": "150ms ease",
    "completion": "200ms bounce"
  }
}